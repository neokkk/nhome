{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "root": ".",
  "compilerOptions": {
    "assets": [
      { "include": "**/*.hbs", "outDir": "dist/src", "watchAssets": true },
      { "include": "**/*.css", "outDir": "dist/src", "watchAssets": true }
    ],
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.build.json"
  }
}
